.main
  .main__form
  = form_for @plan do |f|
    .main__form--month
    予定月を入力してください。<br>
    = f.number_field :month, min: 1, max: 12
    .main__form--content
    予定を入力してください。<br>
    = f.text_field :content
    .main__form--cost
    予定金額を入力してください。<br>
    = f.number_field :cost
    = f.submit '登録', class: 'submit-btn'

  .main__lists
    .main__list
    %table
      %thead
        %tr
          %th 予定月
          %th 予定
          %th 予定金額
          -# %th{:colspan => "3"}
      %tbody
        -current_user.plans.each do |plan|
          %tr
            %td= plan.month
            %td= plan.content
            %td= plan.cost
            %td= link_to '変更', plans_path(id: plan.id)

            %td= link_to '削除', plan, method: :delete

.footer
  .footer__left
    .footer__left--balance
    予定金額残高
    = @plan_balance
    円
  .footer__right
    .footer__right--total
    予定金額合計
    = @total_cost
    円

 